<div metal:use-macro="_LAYOUT">
<div metal:fill-slot="content">
  <div class="header">Forgot Password</div>

  <noscript>
    <h3>Note: JavaScript is required to successfully submit this form.</h3>
  </noscript>

  <p>Enter the email you registered your account with and we'll send you a
    password reset email.</p>
  <form name="input" action="${_R('password_reset')}" method="POST"
        onsubmit="return form_request(this, 'put', true);">
    <p>
      <label for="name">Email</label><br/>
      <input type="text" name="email" id="email"/><br/>
    <input type="submit" name="submit" value="Submit"/>
    </p>
  </form>
  <br/><br/><a href="${_R('home')}">Home</a><br/>
</div>
</div>
