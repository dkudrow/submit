<div metal:use-macro="_LAYOUT">
<div metal:fill-slot="content">
  <p>Make submission for <a href="${_R('class_item', class_name=project.class_.name)}">${project.class_.name}</a> <a href="${_R('project_item_detailed_user', class_name=project.class_.name, project_id=project.id, username=request.user.username)}">${project.name}</a></p>

  <div metal:use-macro="_MACROS['js_test']"></div>

  <fieldset>
    <legend>File Upload</legend>
    <div>
      <label for="files">Select file(s) to upload: </label>
      <input name="files" id="files" type="file" multiple />
      <div id="dropbox"> or drop file(s) here</div>
    </div>
    <div id="messages">
      <h3>Pending Files</h3>
      <ul id="pending">
      </ul>
    </div>

  <form id="upload_form" name="input" action="${_R('submission')}" method="PUT">
    <input type="hidden" name="project_id" value="${project.id}"/>
    <input id="file_submit" type="submit" name="submit" value="Submit 0 Files" disabled="disabled"/>
  </form>
  </fieldset>


  <script>
     new UploadApp();
  </script>

</div>
</div>
