<div metal:use-macro="_LAYOUT">
<div metal:fill-slot="content">
  <div class="header">${page_title}</div>
  <form name="input" action="${action}"
        onsubmit="return form_request(this, '${method}');">
    <p>
      <label for="name">Name</label><br/>
      <input type="text" name="name" id="name" value="${project_name}"/><br/>
    </p>
    <input type="hidden" name="class_id" id="class_id" value="${class_id}"/>
    <input type="submit" name="submit" value="${submit_text}"/>
  </form>
</div>
</div>
