<div metal:use-macro="_LAYOUT">
<div metal:fill-slot="content">
  <div class="header">Create New User</div>
  <form name="input" action="${_R('user')}"
        onsubmit="return form_request(this, 'put');">
    <p>
      <label for="name">Name</label><br/>
      <input type="text" name="name" id="name"/><br/>

      <label for="username">Username</label><br/>
      <input type="text" name="username" id="username" /><br/>

      <label for="password">Password</label><br/>
      <input type="password" name="password" id="password" /><br/>

      <label for="email">E-mail</label><br/>
      <input type="text" name="email" id="email" /><br/>

      <div tal:condition="request.user and request.user.is_at_least_class_admin()">
	<label for="level">Permission level</label><br/>
	<input type="radio" name="level" id="level" value="student" checked="checked">Student<br/>
	<input type="radio" name="level" id="level" value="class_admin">Class Administrator<br/>
      </div>
      <input tal:condition="not (request.user and request.user.is_at_least_class_admin())"
	     type="hidden" name="level" id="level" value="student">
    </p>

    <input type="submit" name="submit" value="Create"/>
  </form>

  <br/><br/><a href="${_R('home')}">Home</a><br/>
</div>
</div>
