<div metal:use-macro="_LAYOUT">
<div metal:fill-slot="content">
  <div class="header">Create New User</div>
  <form name="input" action="${_R('user')}" method="POST"
        onsubmit="return form_request(this, 'put', true);">
    <p>
      <label for="name">Name</label><br/>
      <input type="text" name="name" id="name"/><br/>

      <label for="email">Email</label><br/>
      <input type="text" name="email" id="email" /><br/>

      <label for="password">Password</label><br/>
      <input type="password" name="password" id="password" /><br/>

      <div tal:condition="admin_classes">
	<label for="admin_for">Extra Permissions</label><br/>
	<div tal:repeat="klass admin_classes">
	  <input type="checkbox" name="admin_for[]"
		 value="${klass.id}">Class Administrator for ${klass.name}<br/>
	</div>
      </div>
    </p>

    <input type="submit" name="submit" value="Create"/>
  </form>

  <br/><br/><a href="${_R('home')}">Home</a><br/>
</div>
</div>
