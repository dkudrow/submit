<div metal:use-macro="_LAYOUT">
<div metal:fill-slot="content">
  <div class="header">Create New User</div>

  <div metal:use-macro="_MACROS['js_test']"></div>

  <form name="input" action="${_R('user')}" method="POST"
        onsubmit="return form_request(this, 'put', true);">
    <p>
      <label for="email">Umail Address</label><br/>
      <input type="text" name="email" id="email" /><br/>

      <label for="password">Password</label><br/>
      <input type="password" name="password" id="password" /><br/>

      <div tal:condition="admin_classes">
	<label for="admin_for">Extra Permissions</label><br/>
	<div tal:repeat="class_ admin_classes">
	  <input type="checkbox" name="admin_for[]"
		 value="${class_.id}">Class Administrator for ${class_.name}<br/>
	</div>
      </div>
    </p>

    <input type="submit" name="submit" value="Create"/>
  </form>

  <p>If you do not have a umail address please send an email to bboe _at_
    cs.ucsb.edu from the email you wish to register from along with your full
    name and the class you require the account for.</p>

  <br/><br/><a href="${_R('home')}">Home</a><br/>
</div>
</div>
