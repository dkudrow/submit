<div metal:use-macro="_LAYOUT">
<div metal:fill-slot="content">
  <div class="header">LOGIN</div>

  <noscript>
    <h3>Note: JavaScript is required to successfully submit this form.</h3>
  </noscript>

  <fieldset tal:condition="flash">
    <legend>Status Messages</legend>
    <p tal:repeat="msg flash">${msg}</p>
  </fieldset>

  <div class="bottom">
    <form name="login" action="${_R('session')}" method="POST"
          onsubmit="return form_request(this, 'put');">
      <p>
        <label for="email">Email</label><br/>
        <input type="text" name="email" id="email"
               value="${username}" /><br/>
        <label for="password">Password</label><br/>
        <input type="password" name="password" id="password" />
      </p>
      <input tal:condition="dst" type="hidden" name="dst" value="${dst}" />
      <input type="submit" name="submit" value="Login" />
    </form>
  </div>
  <br/><br/>
  <a href="${_R('password_reset')}">Forgot password?</a><br/>
  <a href="${_R('home')}">Home</a><br/>
</div>
</div>
