<metal:block use-macro="main_template">
  <div metal:fill-slot="content">
    <h1>${class_.name}</h1>
    <p tal:condition="class_admin">
      <div tal:condition="class_.is_locked" class="alert alert-danger">This
        class is locked. You will not be able to make any changes.</div>

      <a class="btn btn-info"
         href="${request.route_path('class.admins', class_name=class_.name)}">
        Add/view class admins</a>

      <div tal:condition="not class_.is_locked" tal:omit-tag="">
        <a class="btn btn-info"
           href="${request.route_path('project_new', class_name=class_.name)}">
          Create new project</a>
      </div>
    </p>

    <h3>Projects</h3>
    <table class="table table-condensed">
      <div tal:repeat="project sorted(class_.projects)" tal:omit-tag="">
        <tr tal:condition="project.can_access(request.user)">
          <span tal:condition="class_admin" tal:omit-tag="">
            <td>
              <a href="${request.route_path('project_edit', project_id=project.id)}"
                       class="btn btn-warning btn-mini">edit</a>
            </td>
            <td>
              <a href="${request.route_path('project_item_summary', class_name=project.class_.name, project_id=project.id)}">${project.name}</a>
            </td>
            <td>
              <span tal:condition="project.is_ready" tal:omit-tag="">
                (ready for submission)
              </span>
            </td>
          </span>
          <td tal:condition="not class_admin">
	    <a href="${request.route_path('project_item_detailed_user', class_name=project.class_.name, project_id=project.id, username=request.user.username)}">${project.name}</a>
          </td>
        </tr>
      </div>
    </table>
    <div tal:condition="recent_subs">
      <h3>Classes' recent submissions</h3>
      <table class="table table-condensed">
        <thead>
          <tr><th>Project</th><th tal:condition="class_admin">Group</th><th>Sub Info</th></tr>
        </thead>
        <tbody>
          <tr tal:repeat="sub recent_subs">
            <td><a href="${request.route_path('project_item_summary', class_name=sub.project.class_.name, project_id=sub.project.id)}">${sub.project.name}</a></td>
            <td tal:condition="class_admin">${sub.group.users_str}</td>
            <td>${structure: sub.time_score(request, admin=True)}</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</metal:block>
