<div metal:use-macro="_LAYOUT">
<div metal:fill-slot="content">
  <p>Info for ${name}</p>
  <div tal:condition="classes_taking">
    <p>Member of These Classes</p>
    <ul>
      <li tal:repeat="klass classes_taking">
	<a href="${_R('class_item', class_name=klass.name)}">${klass.name}</a>
      </li>
    </ul>
  </div>
  <div tal:condition="not classes_taking">
    <p>You are not a member of any classes.</p>
    <a href="${_R('class_add_list')}">Add Classes</a>
  </div>
  <div tal:condition="classes_admining">
    <p>Administrator for These Classes</p>
    <ul>
      <li tal:repeat="klass classes_admining">
	<a href="${_R('class_item', class_name=klass.name)}">${klass.name}</a>
      </li>
    </ul>
  </div>
</div>
</div>
