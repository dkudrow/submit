<div metal:use-macro="_LAYOUT">
<div metal:fill-slot="content">
  <p>Submitted ${_pd(submission.created_at)}</p>
  <div tal:condition="submission.verified_at">
    <p>Submission verified ${_pd(submission.verified_at)}</p>
    <pre>${submission.verification_results}</pre>
  </div>

  <div tal:condition="submission.made_at">
    <p>Submission made ${_pd(submission.made_at)}</p>
    <pre>${submission.make_results}</pre>
  </div>

  <div tal:replace="structure diff_table"></div>
  <hr>
  <div tal:condition="request.user.is_admin">
    <a tal:condition="next_submission_id"
       href="${_R('submission_item', submission_id=next_submission_id)}">
      Next submission for ${current_user_name}
    </a>
    <p tal:condition="not next_submission_id">
      There are no earlier submissions for ${current_user_name}
    </p>
    <a tal:condition="next_user_submission_id"
       href="${_R('submission_item', submission_id=next_user_submission_id)}">
      First submission of next user with submissions
    </a>
    <p tal:condition="not next_user_submission_id">
      This is the last user with submissions
    </p>
  </div>
</div>
</div>
