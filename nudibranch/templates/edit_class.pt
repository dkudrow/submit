<div metal:use-macro="_LAYOUT">
<div metal:fill-slot="content">
    <div class="header">Edit Classes</div>
    <p tal:condition="failed" class="error"> Invalid Input, Try Again</p>
    <p> Class List: </p> 
    <p tal:repeat="message message">${message}</p>
    <br/>
    <p> Remove a Class </p>
    <form name="input" action="${action_path}" method="post">
            <p>
                <label for="name">Class Name</label><br/>
                <input type="text" name="Class_Name" id="name"/><br/>

            </p>
            
            <input type="submit" name="remove_submit" value="Remove"/>
        </form>
    <br/>
    <p> Rename a Class </p>
     <form name="input" action="${action_path}" method="post">
            <p>
                <label for="old_name">Class Name</label><br/>
                <input type="text" name="Old_Name" id="old_name" /><br/>
                
                <label for="rename">New Name</label><br/>
                <input type="text" name="New_Name" id="rename"/><br/>

            </p>
            
            <input type="submit" name="rename_submit" value="Rename"/>        
        </form>
    <br/><br/>
    <a href="${_R('home')}">Home</a><br/>
  </div>
</div>

