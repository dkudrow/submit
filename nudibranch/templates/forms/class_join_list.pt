<metal:block use-macro="main_template">
  <div metal:fill-slot="content">
    <h1>Join a Class</h1>
    ${panel('js_test')}

    <div tal:condition="not classes" class="alert">There are no available
      classes to join.</div>
    <div tal:condition="classes">
      <div tal:repeat="class_ classes">
	<form role="form" name="input"
              action="${request.route_path('user_class_join',
                      class_name=class_.name, username=request.user.username)}"
	      onsubmit="return form_request(this, 'POST');">
          <button type="submit" class="btn btn-default">Join ${class_.name}</button>
	</form>
      </div>
    </div>
  </div>
</metal:block>
